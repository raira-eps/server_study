<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheet/style.css" />
    <script src="https://code.jquery.com/jquery.min.js"></script>
    <script>
      $(document).ready(function(){
        var n = $('#num').val();
        $.getJSON("/ajax?id=" + n, function(json){
          var msg = '<table>' + '<tr><th>名前</th>' +
                    '<td>' + json.name + '/<td></tr>' + 
                    '<tr><th>年齢</th>' + '<td>' + json.age +
                    '</td></tr>' + '<r><th>メール</th>' +
                    '<td>' + json.mail + '</td></tr>' +
                    '</table>';
              $('#msg').html(msg);
        });
      });
    </script>
  </head>
  <body>
    <head>
        <h1><%= title %></h1>
    </head>
    <div role="main">
      <p id='msg'><%- content %></p>
      <input type="text" name='num' id="num">
      <input type="button" id="btm" value="GET">
    </div>
  </body>
</html>
